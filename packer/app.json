{
  "variables": {
    "SOURCE_AMI": null,
    "INSTANCE_USER": "ubuntu"
  },
  "builders": [{
    "type": "amazon-chroot",
    "ami_name": "sample-app {{timestamp}}",
    "source_ami": "{{user `SOURCE_AMI`}}"
  }],
  "provisioners": [{
    "type": "file",
    "source": "app",
    "destination": "/tmp/app"
  }, {
    "type": "shell",
    "environment_vars": [
      "INSTANCE_USER={{user `INSTANCE_USER`}}",
      "NAME=sample-app"
    ],
    "script": "packer/app.sh"
  }]
}
