{
  "variables": {
    "REGION": "us-east-1",
    "SOURCE_AMI": null,
    "INSTANCE_TYPE": "t2.micro",
    "INSTANCE_USER": "ubuntu",
    "VPC_ID": null,
    "SUBNET_ID": null
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "{{ user `REGION`}}",
    "vpc_id": "{{user `VPC_ID`}}",
    "subnet_id": "{{user `SUBNET_ID`}}",
    "associate_public_ip_address": true,
    "instance_type": "{{user `INSTANCE_TYPE`}}",
    "ssh_username": "{{user `INSTANCE_USER`}}",
    "ami_name": "sample-app {{timestamp}}",
    "source_ami": "{{user `SOURCE_AMI`}}"
  }],
  "provisioners": [{
    "type": "file",
    "source": "app",
    "destination": "/tmp/appserver"
  }, {
    "type": "shell",
    "environment_vars": [
      "INSTANCE_USER={{user `INSTANCE_USER`}}",
      "NAME=sample-app"
    ],
    "script": "packer/app.sh"
  }]
}
